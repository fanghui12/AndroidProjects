<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btnGetSensor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/accelerometerView"
        android:layout_width="206dp"
        android:layout_height="91dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="139dp"
        android:text="TextView"
        android:textColor="@color/colorPrimary" />

    <TextView
        android:id="@+id/orientationView"
        android:layout_width="202dp"
        android:layout_height="88dp"
        android:layout_alignStart="@+id/accelerometerView"
        android:layout_below="@+id/btnGetSensor"
        android:text="TextView"
        android:textColor="@android:color/holo_orange_dark" />

    <TextView
        android:id="@+id/proView"
        android:layout_width="207dp"
        android:layout_height="48dp"
        android:layout_alignStart="@+id/accelerometerView"
        android:layout_below="@+id/accelerometerView"
        android:textColor="@android:color/holo_green_dark" />

    <TextView
        android:id="@+id/lightView"
        android:layout_width="205dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/accelerometerView"
        android:layout_below="@+id/magneticView"
        android:text="TextView"
        android:textColor="@color/colorAccent" />

    <TextView
        android:id="@+id/magneticView"
        android:layout_width="205dp"
        android:layout_height="89dp"
        android:layout_alignStart="@+id/accelerometerView"
        android:layout_below="@+id/proView"
        android:text="TextView"
        android:textColor="#f54601" />

</RelativeLayout>